<h1>Users#edit</h1>
<div class="container">
	<% if @user.errors.any? %>
		  	<h2><%= @user.errors.count %>error occurence</h2>
		  	<ul>
		  		<% @user.errors.full_messages.each do |message| %>
		  		  <li><%= message %></li>
		  		<% end %>
		  	</ul>
		  	<% end %>
<h1>User info</h1>
<%= form_for(@user) do |f| %>
	   <div>
	<h4>Name</h4>
	<%= f.text_field :name %>
		</div>
	   <div>
	   	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	<h4>Introduction</h4>
	    <%= f.text_area :introduction %>
	    </div>
	    <div><h4> </h4></div>
		    <div>
	    <%= f.submit "Update User" %>
	     	</div>
	   		<% end %>
	    </div>