<div class="container">
<div>
<%= render 'layouts/form', user: @user, book: @book %>
	   	</div>
<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
				<% @users.each do |f| %>
				<tr>
					<td><%= link_to attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %></td>
					<td><%= f.name %></td>
					<td><%= link_to "Show", user_path(f) %></td>
				</tr>
				<% end %>
			</table>
</div>
</div>