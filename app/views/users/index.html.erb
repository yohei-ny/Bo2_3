<div>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	   <div>
	<h4>Title</h4>
	<%= f.text_field :title %>
		</div>
	   <div>
	<h4>Opinion</h4>
	    <%= f.text_area :body %>
	    </div>
	    <div><h4> </h4></div>
		    <div>
	    <%= f.submit "Create Book",class: "btn btn-smbtn-primary btn-block active"  %>
	     	</div>
	   		<% end %>
	    </div>
<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
				<% @users.each do |f| %>
				<tr>
					<td><%= link_to attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %></td>
					<td><%= f.name %></td>
					<td><%= link_to "Show", user_path(f) %></td>
				</tr>
				<% end %>
			</table>
</div>