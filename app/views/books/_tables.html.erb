

<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
				<tr>
					<th>image</th>
					<th>title</th>
					<th>body</th>
					<!-- <th></th>
					<th></th> -->
				</tr>
				</thead>
				<tbody>
				<tr>
						<td>
    				<%= link_to user_path(user) do %>
    				<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
							<%= user.name %>
							<% end %>
						</td>
					    <td><%= mybook.title %></td>
					    <td><%= mybook.body %></td>
			    			<% if mybook.user == current_user %>
				    		<td><%= link_to "Edit", edit_book_path(mybook) %></td>
							<td><%= link_to "Destroy", book_path(mybook), method: :delete,"data-confirm" =>"本当に削除しますか?" %></td>
			    		<% end %>
				</tr>
				</tbody>
			</table>
		</div>