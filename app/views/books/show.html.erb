<h1>Books#show</h1>



<div>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	   <div>
	<h4>Title</h4>
	<%= f.text_field :title %>
		</div>
	   <div>
	<h4>Opinion</h4>
	    <%= f.text_area :body %>
	    </div>
	    <div><h4> </h4></div>
		    <div>
	    <%= f.submit "Create Book",class: "btn btn-smbtn-primary btn-block active"  %>
	     	</div>
	   		<% end %>
	    </div>
<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<th scope="row">
						<td>
    				<%= link_to user_path(@user) do %>
    				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60 ,format: 'jpeg', fallback: "no_image.jpg" %>
    				</br>
							<%= @user.name %>
							<% end %>
						</td>
						<% if @user == current_user %>
					    <td><%= @book.title %></td>
					    <td><%= @book.body %></td>
			    		<td>
				    		<td><%= link_to "Edit", edit_book_path(@book) %></td>
							<td><%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" =>"本当に削除しますか?" %></td>
			    		</td>
			    		<% end %>
					</th>
				</tr>
			</table>
		</div>